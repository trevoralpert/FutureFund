{
  "name": "futurefund",
  "version": "1.0.0",
  "description": "AI-Powered Personal Finance Forecasting Desktop App",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run build:clean && electron-builder",
    "build:clean": "rm -rf dist/",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build",
    "test": "node src/test-suite.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "finance",
    "forecasting",
    "ai",
    "desktop",
    "electron"
  ],
  "author": "Trevor Alpert",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@langchain/langgraph": "^0.0.19",
    "@langchain/openai": "^0.0.14",
    "chart.js": "^4.5.0",
    "csv-parser": "^3.0.0",
    "date-fns": "^3.0.0",
    "dotenv": "^17.0.0",
    "langchain": "^0.1.0",
    "langsmith": "^0.0.48",
    "openai": "^4.24.0",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.gauntletai.futurefund",
    "productName": "FutureFund",
    "compression": "maximum",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "data/**/*",
      "!src/test-suite.js",
      "!**/*.test.js",
      "!**/*.spec.js",
      "!**/node_modules/.cache"
    ],
    "extraFiles": [
      {
        "from": "environment.template",
        "to": ".env.example"
      }
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "trevoralpert",
      "repo": "FutureFund"
    }
  }
}
